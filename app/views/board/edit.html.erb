<div class="container">
  <br>
    <center>
        <h1>< <%= params[:p_id] %>번 글입니다 ></h1>
        <p>글을 수정하세요</p>
    </center>    
  <form action="/board/update/<%=@edit_p.id%>" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">글 제목</label>
        <input type="text" name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="제목을 입력하세요" value=<%= @edit_p.title%>>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">작성자</label>
        <input type="text" name="editor" class="form-control" id="exampleInputPassword1" placeholder="editor" value="<%= @edit_p.editor%>">
      </div>
      <div class="form-group">
          <label for="comment">글 내용</label>
          <textarea class="form-control" name="content" rows="10" id="comment"><%= @edit_p.content%></textarea>
        </div>
      <button type="submit" class="btn btn-primary">작성하기</button>
    </form>
</div>